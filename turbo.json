{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "build": {
      "outputs": ["build/**", ".next/**", "dist/**"],
      "cache": true
    },
    "build:cjs": {
      "outputs": ["build/**", ".next/**", "dist/**"],
      "cache": true
    },
    "build:esm": {
      "outputs": ["build/**", ".next/**", "dist/**"],
      "cache": true
    },
    "lint": {
      "outputs": []
    },
    "postbuild": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "start": {
      "outputs": []
    },
    "seed": {
      "cache": false
    },
    "clean": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true
    }
  }
}
