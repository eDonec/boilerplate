{
  "name": "auth",
  "version": "1.1.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon src/index.ts",
    "start:prod": "node build/index.js",
    "clean": "rimraf build && node ./scripts/postbuild.js",
    "prebuild": "yarn clean && node ./scripts/prebuild.js",
    "build": "npm run build:types && npm run build:js",
    "postbuild": "node ./scripts/postbuild.js",
    "build:js": "babel src --out-dir build --extensions \".ts\"",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "jest --coverage",
    "seed": "ts-node src/seed/index.ts",
    "lint": "tsc --noEmit && eslint src --fix"
  },
  "dependencies": {
    "apple-signin-auth": "1.5.1",
    "auth-events": "*",
    "auth-types": "*",
    "axios": "0.27.2",
    "bcrypt": "5.0.1",
    "body-parser": "1.20.0",
    "core-utils": "*",
    "custom-error": "*",
    "date-fns": "2.28.0",
    "dotenv": "16.0.0",
    "field-validator": "*",
    "http-server": "*",
    "jsonwebtoken": "8.5.1",
    "mongoose": "6.3.1",
    "nanoid": "3.3.3",
    "shared-types": "*",
    "token": "*"
  },
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.18.2",
    "@babel/node": "7.17.10",
    "@babel/plugin-proposal-class-properties": "7.17.12",
