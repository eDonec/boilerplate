{
  "name": "example-monorepo",
  "private": true,
  "version": "0.0.8",
  "scripts": {
    "prepare": "husky install",
    "clean": "turbo run clean",
    "start": "yarn clean && turbo run start --parallel",
    "build:packages": "turbo run build --token=tym4TfVTD5qGG7s9MudjhmCwQ9g20BV2 --filter=\"./packages/**\" && yarn resolve:packages:modules",
    "build:packages:cjs": "yarn clean --filter=\"./packages/**\" && turbo run build:cjs --token=tym4TfVTD5qGG7s9MudjhmCwQ9g20BV2 --filter=\"./packages/**\" && yarn resolve:packages:modules",
    "build:packages:esm": "yarn clean --filter=\"./packages/**\" && turbo run build:esm --token=tym4TfVTD5qGG7s9MudjhmCwQ9g20BV2 --filter=\"./packages/**\" && yarn resolve:packages:modules",
    "build": "turbo run build --token=tym4TfVTD5qGG7s9MudjhmCwQ9g20BV2",
    "resolve:packages:modules": "node ./.internal/postbuild.js",
    "release": "standard-version -- --release-as minor && yarn postcommit",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "seed": "turbo run seed",
    "postcommit": "git push --follow-tags origin master",
    "test": "turbo run test",
    "sync:workflows": "node .internal/sync-workflows.js"
  },
  "workspaces": [
    "apps/*",
    "apps/APIs/*",
    "packages/browser/*",
    "packages/config/*",
    "packages/node/*",
    "packages/SDK/browser/*",
    "packages/SDK/node/*",
    "packages/node/api-types/*",
    "packages/node/events/*"
  ],
  "lint-staged": {
    "*.config.js": [
      "prettier -w"
    ],
    "apps/!(proxy)/**/!(*.config|*.setup|*rc|next-sitemap|postbuild|prebuild).{js,jsx,ts,tsx,}": [
      "eslint --fix --max-warnings=0",
      "prettier -w"
    ],
    "packages/!(config)/**/!(*.config|*.setup|*rc|next-sitemap|postbuild).{js,jsx,ts,tsx,}": [
      "eslint --fix --max-warnings=0",
      "prettier -w"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "16.2.1",
    "@craco/craco": "6.4.3",
    "@edonec/generator": "1.2.4",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.1.1",
    "@testing-library/react-hooks": "8.0.0",
    "@testing-library/user-event": "14.1.1",
    "esbuild": "0.14.38",
    "esbuild-jest": "0.5.0",
    "esbuild-node-externals": "1.4.1",
    "eslint": "8.14.0",
    "husky": "7.0.4",
    "jest": "28.0.2",
    "jest-environment-jsdom": "28.0.2",
    "lint-staged": "12.4.1",
    "rimraf": "^3.0.2",
    "standard-version": "9.3.2",
    "tailwindcss": "3.0.24",
    "turbo": "1.2.5",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": "^18"
  },
  "packageManager": "yarn@1.22.17",
  "dependencies": {}
}
